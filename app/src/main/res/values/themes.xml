<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--<style name="Theme.NoteBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <!-- 取消自带工具条 .NoActionBar -->
    <style name="Theme.NoteBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- 透明状态栏 -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.NoteBook.addWindow" parent="Theme.NoteBook">
        <!-- 设置悬浮 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 输入模式 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
        <!-- 去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:dialogTitle">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:title">@null</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:background">@null</item>-->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <!-- 触摸外界关闭窗口 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>